<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@null"

    >

    <View
        android:layout_marginTop="6dp"
        android:layout_width="60dp"
        android:layout_height="3dp"
        android:background="#B01C1C1C"
        android:layout_gravity="center_horizontal"
        />

    <LinearLayout
        android:padding="10dp"
        android:layout_marginTop="5dp"
        android:weightSum="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            >

            <ImageView
                android:background="@drawable/three_color_curved"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/save"
                android:padding="8dp"

                android:layout_gravity="center"
                />
            <TextView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:textStyle="bold"
                android:textColor="#D5000000"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            >

            <ImageView
                android:background="@drawable/three_color_curved"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/baseline_workspace_premium_24"
                android:padding="8dp"

                android:layout_gravity="center"
                />
            <TextView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remix"
                android:textStyle="bold"
                android:textColor="#D5000000"
                />

        </LinearLayout>



        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            >

            <ImageView
                android:background="@drawable/three_color_curved"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/baseline_qr_code_24"
                android:padding="8dp"

                android:layout_gravity="center"
                />
            <TextView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QR code"
                android:textStyle="bold"
                android:textColor="#D5000000"
                />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#59000000"
        />

    <LinearLayout
        android:id="@+id/share"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_gravity="center"
            android:layout_marginLeft="6dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/send"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="7dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="We're moving things around!"
                android:textColor="#EB000000"
                android:textSize="15sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="See where to share and link"
                android:textColor="#F3038CCA"
                android:textSize="13sp" />



        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            >
            <ImageView
                android:layout_marginRight="5dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_close_24"
                />

        </RelativeLayout>

    </LinearLayout>


    <View
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#59000000"
        />


    <LinearLayout
        android:id="@+id/unfollow"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_gravity="center"
            android:layout_marginLeft="6dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/baseline_do_not_disturb_on_24"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unfollow hashtag"
                android:textColor="#EB000000"
                android:textSize="15sp"
                />

        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#59000000"
        />


    <LinearLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_gravity="center"
            android:layout_marginLeft="6dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:text="#"
            android:textSize="25sp"
            android:gravity="center"
            android:textColor="#000"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="7dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Don't show for this hashtag"
                android:textColor="#EB000000"
                android:textSize="15sp"
                />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_gravity="center"
            android:layout_marginLeft="6dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/baseline_report_gmailerrorred_24"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Report"
                android:textColor="#F63E3E"
                android:textSize="15sp"
                />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>